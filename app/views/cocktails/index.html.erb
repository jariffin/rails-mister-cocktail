<h1 class="">Cocktails</h1>

  <div class="container m-3">
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="mr-3">
          <div class="card-category">
            <%= cl_image_tag cocktail.photo.key, width: 150, height: 150, crop: :fill %>
          </div>
          <div class="text-right thrash">
            <%= link_to "#{cocktail.name}", cocktail_path(cocktail) %>
            <%= link_to cocktail_path(cocktail),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
                 <i class="fas fa-trash"></i>
            <% end %>
          </div>
          </div>
      <% end %>
    </div>
  </div>
